	author = {Siewert, Matthias B.},
	month = mar,
	year = {2018},
	note = {Number: 6
Publisher: Copernicus GmbH},
	pages = {1663--1682},
	file = {Full Text PDF:C\:\\Users\\User\\Zotero\\storage\\EFWSFZQV\\Siewert - 2018 - High-resolution digital mapping of soil organic ca.pdf:application/pdf;Snapshot:C\:\\Users\\User\\Zotero\\storage\\GUS52A7Q\\2018.html:text/html},
