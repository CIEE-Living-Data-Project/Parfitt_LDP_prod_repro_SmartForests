@article{antonova_thaw_2018,
	title = {Thaw {Subsidence} of a {Yedoma} {Landscape} in {Northern} {Siberia}, {Measured} {In} {Situ} and {Estimated} from {TerraSAR}-{X} {Interferometry}},
